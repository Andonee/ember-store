<LinkTo @route="item" @model={{this.args.model}}>
  <div class="product">
    <img src={{this.args.img}} alt="shoes" class="product_img" />
    <div class="product_title">{{this.args.title}}</div>
    <div class="product_price">{{this.args.price}}</div>
  </div>
</LinkTo>
<button type="button" {{on "click" (fn this.args.deleteProduct @this.model.id)}}>Remove</button>
<button type="button" {{on "click" (fn this.args.updateProduct @this.model.id)}}>Update</button>