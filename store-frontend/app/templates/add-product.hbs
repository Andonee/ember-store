<div class="add_product_container">
  <div class="add_product">
    <Input placeholder="Product name" @value={{this.name}} class="add_product_input" />
    <PowerSelect @options={{this.categories}} @selected={{this.category}} @onChange={{this.onCategorySelect}} as
      |category|>
      {{category}}
    </PowerSelect>
    <Input placeholder="price" class="add_product_input" @value={{this.price}} />
    <Input placeholder="product photo" class="add_product_input" @value={{this.image}} />
    <button class="add_product_btn" type="button" {{on "click" this.Products}}>ADD PRODUCT</button>
  </div>
  {{#if this.image}}
  <div class="add_product_image_container">
    <img class="add_product_image" src={{this.image}} alt='procuct' />
  </div>
  {{/if}}
</div>